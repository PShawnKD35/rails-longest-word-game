<div class="container">
    <h1>New Game</h1>
    <div class="cards-container">
        <% @grid.each do |letter| %>
        <div class="card"><%= letter %></div>
        <% end %>
    </div>
    <form action="/score" method="post">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :grid, @grid %>
        <%= hidden_field_tag :start_time, @start_time %>
        <label for="attempt">What's the longest word you can find?</label>
        <input type="text" name="attempt" id="attempt" placeholder="Your guess">
        <input type="submit" value="Submit">
    </form>
</div>
